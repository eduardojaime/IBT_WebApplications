@{
    bool isTuesday = (DateTime.Now.DayOfWeek == DayOfWeek.Tuesday);
}

<h1>This is the Weather Information Section!</h1>

<h1>Hi everybody!</h1>
<p>It's @DateTime.Now.ToString("hh:mm")</p>
<hr>
Let me count till ten.
<ul>
    @for (var i = 1; i <= 10; i++)
    {
        <li>@i</li>
    }
</ul>

@if (isTuesday == true)
{
    <p>This is Tuesday's message!</p>
}


@Html.Raw("<b>bold text</b>")
@Html.TextArea("comment-box")